<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    
      <!-- Workflow emprunt -->
    <record id="workflow_empruntbasic" model="workflow">
    	<field name="name">emprunt.basic</field>
    	<field name="osv">hr.emprunt</field>
    </record>
    
    <!-- Workflow activity -->
    
    <record id="act_emprunt_draft" model="workflow.activity">
    	<field name="name">draft</field>
    	<field name="wkf_id" ref="workflow_empruntbasic" />
    	<field name="kind">function</field>
    	<field name="action">action_draft()</field>
    	<field name="flow_start">True</field>
    </record>
    
    <record id="act_emprunt_confirmed" model="workflow.activity">
    	<field name="name">confirmed</field>
    	<field name="wkf_id" ref="workflow_empruntbasic" />
    	<field name="kind">function</field>
    	<field name="action">action_confirm()</field>
    </record>
    
    <record id="act_emprunt_done" model="workflow.activity">
    	<field name="name">done</field>
    	<field name="wkf_id" ref="workflow_empruntbasic" />
    	<field name="kind">function</field>
    	<field name="action">action_done()</field>
    </record>
    
       <!-- Workflow transition -->
    
    	<record id="trans_emprunt_0" model="workflow.transition">
            <field name="act_from" ref="act_emprunt_draft"/>
            <field name="act_to" ref="act_emprunt_confirmed"/>
            <field name="signal">signal_confirm</field>
            <field name="condition">True</field>
        </record>
        
        <record id="trans_emprunt_1" model="workflow.transition">
            <field name="act_from" ref="act_emprunt_confirmed"/>
            <field name="act_to" ref="act_emprunt_done"/>
            <field name="signal">signal_done</field>
            <field name="condition">True</field>
        </record>
        
        <record id="trans_emprunt_2" model="workflow.transition">
            <field name="act_from" ref="act_emprunt_confirmed"/>
            <field name="act_to" ref="act_emprunt_draft"/>
            <field name="signal">signal_draft</field>
            <field name="condition">True</field>
        </record>
    
    </data>
</odoo>