        <template id="report_invoice_no_header_template">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang"
                       t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="madata_custom_invoice.report_invoice_document_no_header" t-lang="lang"/>
                </t>
            </t>
        </template>

